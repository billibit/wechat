/**index.wxss**/
@import '../../style/weui.wxss';

.bill-tags { padding: 10px 0; text-align: center; position: relative; }
.tabs>wx-view { display: inline-block; width: 80px; height: 25px; font-size: 14px; color: #778087; border: 1px solid #778087; line-height: 25px; box-sizing: content-box; }
.addbill { position: absolute; height: 100%; right: 15px; top: 0; line-height: 48px; font-size: 14px; }
.addbill::before{ content: ''; display: inline-block; width: 16px; height: 100%; background: url(data:image/png;base64,) no-repeat center; background-size: 16px 16px; vertical-align: top; margin-right: 4px; }.notpay { border-radius: 4px 0 0 4px; border-right: none; }
.payed { border-radius: 0 4px 4px 0; border-left: none; }
.active wx-view { background-color: #778087; color: #fff; }
.panel { box-sizing: border-box; height: 100%; overflow: auto; -webkit-overflow-scrolling: touch; }
.bank-cont { display: flex; align-items: center; padding: 8px 15px !important; }
.bank-logo { width: 32px; height: 32px; margin-right: 0.5em; vertical-align: middle; }
.bank-info { width: 100%; display: flex; flex-direction: column; justify-content: space-between; }
.bank-name { font-size: 12px; color: #000; }
.debt-detail { width: 100%; }
.debt-item { text-align: center; }
.weui-loadmore_line { margin-top: 1em; }
.weui-loadmore { margin: 1em auto -1em; }
.bill-money { font-size: 30px; color: #dc143c; }
.debt-item wx-text { color: #999; font-size: 14px; }
.debt-info { display: flex; justify-content: space-between; align-items: baseline; font-size: 12px; margin-top: 10px; }
.debt-info wx-text { font-size: 16px; }
.add-panel { height: 80px; text-align: center; line-height: 80px; font-size: 25px; }