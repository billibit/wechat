@import '../../style/weui.wxss';
body { background-color: #f8f8f8; padding-bottom: 0; }
.act-item { padding: 9px 12px; background-color: #fff; display: flex; position: relative; text-align: justify; }
.act-list { background-color: #f8f8f8; padding: 10px 0; }
.more-act .act-item { box-shadow: 0px 0px 2px #d5d3d3; margin-bottom: 10px; border-radius: 5px; }
.img { margin-right: 10px; }
.img wx-image { width: 32px; height: 32px; }
.des .title { font-size: 12px; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden; }
.des .titlered { font-size: 14px; color: #d0021b; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden; }
.remindTime { line-height: 16px; }
.remindTime wx-view { font-size: 10px; color: #9b9b9b; display: inline-block; vertical-align: middle; margin-right: 5px; }
.remindTime wx-image { width: 16px; height: 16px; display: inline-block; vertical-align: middle; filter: grayscale(100%); }
.remindTime .greenbell { filter: none; animation: tada 1s 0s 1 both; }
@keyframes tada { from { transform: scale3d(1, 1, 1); }
10%, 20% { transform: scale3d(0.9, 0.9, 0.9) rotate3d(0, 0, 1, -3deg); }
30%, 50%, 70%, 90% { transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, 3deg); }
40%, 60%, 80% { transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, -3deg); }
to { transform: scale3d(1, 1, 1); }
}.flow { width: 60px; height: 30px; margin: 0 auto; text-align: center; line-height: 30px; border: 1px solid #1aad19; border-radius: 5px; font-size: 14px; background-color: #fff; }
.btn-area { background-color: #fff; height: 60px; padding: 10px 0; }
.nflow { color: #fff; background-color: #1aad19; }
.nflow:before { content: '关注'; }
.flowed { color: #1aad19; border: 1px solid #1aad19; background: none; }
.flowed:before { content: '已关注'; }
.panel { background-color: #fff; }
.panel .title { height: 32px; line-height: 32px; font-size: 14px; background-color: #f8f8f8; position: relative; padding-left: 10px; }
.remind { height: 0; overflow: hidden; transition: 0.5s; }
.toggle { height: 108px; }
.remind .title { height: 40px; line-height: 40px; padding-right: 12px; }
.remind .title wx-switch { float: right; }
.panel .title::before { content: ''; display: block; width: 5px; height: 20px; background-color: #dfdfdf; position: absolute; left: 0; top: 6px; }
.remind .title::before { top: 10px; }
.rich-text { font-size: 14px; color: #9b9a9b; padding: 12px; }
.rich-text wx-image { max-width: 100%; }
.btns { height: 32px; background-color: #eeecec; color: #9b9b9b; display: flex; }
.btns wx-image { width: 16px; height: 16px; vertical-align: middle; margin-right: 5px; }
.btns wx-text { vertical-align: middle; }
.btns wx-navigator { width: 50%; text-align: center; line-height: 32px; font-size: 14px; position: relative; }
.btns wx-navigator:nth-child(1)::after { content: \x27\x27; display: block; height: 20px; width: 0; border-right: 1px solid #cec8c8; position: absolute; right: 0; top: 6px; }
.more-act > .title { font-size: 18px; color: #999; text-align: center; line-height: 80px; border-bottom: 1px solid #f8f8f8; background-color: #fff; }
.more-act > .title::before { content: \x27\x27; display: inline-block; width: 25%; height: 0; border-bottom: 1px solid #e5e5e5; vertical-align: middle; margin-right: 5px; }
.more-act > .title::after { content: \x27\x27; display: inline-block; width: 25%; height: 0; border-bottom: 1px solid #e5e5e5; vertical-align: middle; margin-left: 5px; }
.wankadi { color: #576b95; }