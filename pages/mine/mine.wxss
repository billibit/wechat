@import '../../style/weui.wxss'; 

.head { width: 100%; height: 160px; overflow: hidden; position: relative; }
.blur { width: 100%; height: 170px; background: url(https://pic.wankadi.com/org/23333.jpg) no-repeat 50%; background-size: 100% auto; filter: blur(10px); }
.headimg { position: absolute; left: 0; top: 0; width: 100%; height: 100%; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.headimg wx-view { font-size: 15px; color: #fff; margin-top: 10px; }
.img { width: 66px; height: 66px; border-radius: 50%; border: 2px solid #fff; background-size: 110% 110%; background-position: center center; background-repeat: no-repeat; box-shadow: 3px 5px 10px 2px rgba(0, 0, 0, 0.5); }
.card-info { margin: 10px 0; background-color: #fff; height: 66px; display: flex; text-align: center; }
.card-info wx-text { font-size: 10px; color: #4a4a4a; }
.card-info .num { font-size: 20px; color: #4a4a4a; }
.card-info .des { font-size: 8px; color: #9b9b9b; }
.item { width: 33.33%; padding: 4px 0; position: relative; display: flex; flex-direction: column; justify-content: space-around; }
.mid::before { content: \x22\x22; display: block; width: 0; height: 45px; border-left: 1px solid #979797; position: absolute; top: 10px; }
.mid::after { content: \x22\x22; display: block; width: 0; height: 45px; border-left: 1px solid #979797; position: absolute; right: 0; top: 10px; }
.tip { text-align: center; font-size: 12px; color: #4a4a4a; padding: 30px 0; }
.tip wx-view:before { content: \x22\x22; display: inline-block; width: 5px; height: 0; border-top: 1px solid #4a4a4a; vertical-align: middle; margin-right: 5px; }
.tip wx-view:after { content: \x22\x22; display: inline-block; width: 5px; height: 0; border-top: 1px solid #4a4a4a; vertical-align: middle; margin-left: 5px; }
wx-button.contact { text-align: left; background-color: inherit; padding-left: 0; font-size: inherit; line-height: inherit; }
wx-button.contact::after { border: none }