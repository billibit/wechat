@import '../../style/weui.wxss';
.bank-cont { display: flex; align-items: center; padding: 8px 15px !important; }
.bank-logo { width: 32px; height: 32px; margin-right: 0.5em; vertical-align: middle; }
.bank-detail { width: 100%; display: flex; justify-content: space-between; font-size: 10px; }
.bank-info { width: 100%; display: flex; flex-direction: column; justify-content: space-between; }
.bank-name { font-size: 12px; color: #000; }
.card-cont { padding: 8px 15px !important; }
.card-pic { width: 88px; height: 56px; margin-right: 0.5em; }
.card-pic wx-image { width: 88px; height: 56px; border-radius: 6px; }
.card-detail { line-height: 1.3; color: #000; flex: 1; min-width: 0; overflow: hidden; }
.card-name { font-size: 15px; }
.card-tags wx-text { color: #666; font-size: 12px; margin-right: 6px; }
.card-num { float: right; }
.tips { font-size: 12px; color: #9b9b9b; padding: 4px 15px; }